<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <shape>
            <gradient
                android:startColor="#8fff44"
                android:endColor="#5aa12b"
                android:angle="270" />
            <stroke
                android:width="1dp"
                android:color="#565656" />
            <corners
                android:radius="5dp" />
        </shape>
    </item>

    <item>
        <shape>
            <gradient
                android:startColor="#66ff00"
                android:endColor="#47b300"
                android:angle="270" />
            <stroke
                android:width="1dp"
                android:color="#565656" />
            <corners
                android:radius="5dp" />
        </shape>
    </item>
</selector>